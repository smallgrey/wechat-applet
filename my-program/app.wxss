/* 引入we-ui库 */
@import './miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';

/**app.wxss**/
.container{
	position: absolute;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

.top_title {
	color: #ffffff;
	font-size: 16px;
	width: 100%;
	text-align: center;
	padding: 10vw 0 5vw;
	background-color: #f44336;
}

.content-container, .foot-container, .foot-tabbar{
	width: 100%;
}

.foot-tabbar {
  background: #ffffff !important;
  height: 100rpx;
}

.flex-row{
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
}

.flex-grow{
	flex: 1;
	overflow: scroll;
}
